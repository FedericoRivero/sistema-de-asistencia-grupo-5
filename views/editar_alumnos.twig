{% extends "padre.twig" %}
{% block contenido %}
<h2>Editar Datos Alumnos </h2>
<form action="/sistema-de-asistencia-grupo-5/" method="POST">
<table class="tablaCurso">
<th colspan="2"> Datos del Alumno</th>

{% for asistentes in listadoAlumnos %} 
  <tr>
   <input type="hidden" id="id" name="id" value="{{ asistentes['email'] }}">

   <td>Nombres:</td>
    <td><input class="inputEditar"  type="text" name="nombre" value="{{ asistentes['nombre'] }}" ></td>
  </tr>
  <tr>
    <td> Apellido: </td>
     <td><input class="inputEditar" type="text"  name="apellido" value="{{ asistentes['apellido'] }}"></td>   
  </tr>
  <tr>
    <td> Email: </td>
       <td><input class="inputEditar"  type="text" name="nuevo_email" value="{{ asistentes['email'] }}"></td>
  
  </tr>
   {% endfor %}
   <tr>
    
       <td colspan="2"> <input type="submit" id="subject" name="subject" value="Modificar" class="botonTabla"> </td>
  
  </tr>
  
  </table>
  </form>
{%endblock%}